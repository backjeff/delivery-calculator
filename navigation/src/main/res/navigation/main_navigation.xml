<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/main_navigation"
    app:startDestination="@id/distanceSearchFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.github.overlhaverde.deliverycalculator.feature.splashscreen.SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_distanceSearchFragment"
            app:destination="@id/distanceSearchFragment"
            app:popUpTo="@id/main_navigation"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/distanceSearchFragment"
        android:name="com.github.ovelhaverde.deliverycalculator.distancesearch.DistanceSearchFragment"
        android:label="Distance Search" />
</navigation>